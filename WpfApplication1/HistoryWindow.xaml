<Window x:Name="HistoryWindow1" x:Class="WpfApplication1.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Review / Edit Sales Data" Height="509" Width="819.5" Closing="HistoryWindow1_Closing">
    <Grid Margin="0,0,0,0">
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="10,448,0,0" VerticalAlignment="Top" Width="75" Click="SaveButton_Click"/>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="104,448,0,0" VerticalAlignment="Top" Width="75" Click="CloseButton_Click"/>
        <DataGrid x:Name="SalesDataGrid" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" ItemsSource="{Binding}" AutoGeneratingColumn="SalesDataGrid_AutoGeneratingColumn" Height="435" Width="812"/>
    </Grid>


</Window>
